<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	version="2.5">


	<listener>
		<listener-class>com.listners.AppContextListener</listener-class>

	</listener>

	<listener>
		<listener-class>com.listners.SessionTime</listener-class>

	</listener>


	<context-param>
		<param-name>propertyfile</param-name>
		<param-value>/home/valuelabs/workspace/UsingFilters/users.properties</param-value>
	</context-param>


	<filter>
		<filter-name>loginfilter</filter-name>
		<filter-class>com.filters.LoginFil</filter-class>
	</filter>

	<filter>
		<filter-name>sessionfilter</filter-name>
		<filter-class>com.filters.SessionFil</filter-class>
	</filter>


	<filter-mapping>
		<filter-name>loginfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<filter-mapping>
		<filter-name>sessionfilter</filter-name>
		<url-pattern>/*</url-pattern>
	</filter-mapping>

	<servlet>
		<servlet-name>login</servlet-name>
		<servlet-class>com.servlets.LoginServ</servlet-class>
	</servlet>
	<servlet>
		<servlet-name>displayservlet</servlet-name>
		<servlet-class>com.servlets.DisplayServ</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>login</servlet-name>
		<url-pattern>/loginServlet</url-pattern>
	</servlet-mapping>



	<servlet-mapping>
		<servlet-name>displayservlet</servlet-name>
		<url-pattern>/displayservlet</url-pattern>
	</servlet-mapping>
	<welcome-file-list>
		<welcome-file>home.html</welcome-file>
	</welcome-file-list>
		<session-config>
<session-timeout>10</session-timeout>
</session-config>
</web-app>